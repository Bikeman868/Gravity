                    { "name": "C", "x": 700, "y": 230 },
                    { "name": "D", "x": 950, "y": 220 },
                    { "name": "E", "x": 950, "y": 300 },
                    { "name": "F", "x": 950, "y": 380 },
                    { "name": "G", "x": 700, "y": 150 },
                    { "name": "H", "x": 550, "y": 800 },
                    { "name": "I", "x": 1100, "y": 650 },
                    { "name": "J", "x": 300, "y": 800 },
                    { "name": "K", "x": 550, "y": 550 },
                    { "name": "L", "x": 300, "y": 550 },
                    { "name": "M", "x": 800, "y": 830 },
                    { "name": "N", "x": 450, "y": 50 },
                    { "name": "O", "x": 850, "y": 500 }
                ]
            }
        },
        "middleware": {
            "listener": {
            },
            "pages": {
            },
            "debugInfo": {
            }
        }
    },
    "owinFramework": {
        "pages": {
            "html": {
                "includeComments": true,
                "indented": true
            }
        }
    }
